{
  "name": "root",
  "private": true,
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "eslint --max-warnings 0"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix",
      "eslint --max-warnings 0"
    ],
    "*.{scss,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "yarn workspace @ideal-schema/playground dev",
    "dev": "yarn workspace @ideal-schema/core start",
    "docs:serve": "yarn workspace @ideal-schema/ideal-ui-v3 serve",
    "build": "rimraf -rf dist && lerna run build",
    "build:playground": "yarn workspace @ideal-schema/playground build",
    "build:core": "yarn workspace @ideal-schema/core build",
    "build:shared": "yarn workspace @ideal-schema/shared build",
    "build:schema": "yarn workspace @ideal-schema/json-schema build",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "commit": "git add . && git-cz"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@types/js-beautify": "^1.13.3",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^16.11.6",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^3.21.0",
    "tsup": "^6.1.3",
    "typescript": "^4.4.3",
    "vite": "^2.9.13"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
